<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:background="@drawable/calendar_day_bg"
    android:padding="4dp">

    <TextView
        android:id="@+id/tvDayOfMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDayIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100k"
        android:textSize="8sp"
        android:textColor="#2196F3"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvDayOfMonth"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDayExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50k"
        android:textSize="8sp"
        android:textColor="#F44336"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvDayIncome"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>