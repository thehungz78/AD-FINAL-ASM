<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    tools:context=".CreateTransactionActivity">
    <!-- background="#FFF9C4" là màu vàng nhạt giống mẫu -->

    <!-- Header: Tabs Thu/Chi -->
    <LinearLayout
        android:id="@+id/layoutTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tabExpense"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="#FF9800"
            android:gravity="center"
            android:text="Tiền chi"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tabIncome"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="#F0F0F0"
            android:gravity="center"
            android:text="Tiền thu"
            android:textColor="#757575"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBackToMain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:text="✕"
        android:textColor="#333"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutTabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layoutTabs" />

    <!-- Khu vực nhập liệu chính -->
    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutTabs">

        <!-- Dòng Ngày -->
        <LinearLayout
            android:id="@+id/rowDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Ngày"
                android:textColor="#757575"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDateDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:padding="8dp"
                android:text="04/12/2025"
                android:textColor="#333"
                android:textStyle="bold"
                app:drawableEndCompat="@android:drawable/ic_menu_my_calendar"
                app:drawableTint="#757575"/>
        </LinearLayout>

        <!-- Dòng Ghi chú -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:textColor="#757575"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtTransactionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Chưa nhập vào"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Dòng Số tiền (To) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvAmountLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Tiền chi"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtTransactionAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF8E1"
                android:hint="0"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#FF9800"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="đ"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Tiêu đề Danh mục -->
    <TextView
        android:id="@+id/tvCategoryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Danh mục"
        android:textColor="#555"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/layoutInput" />

    <!-- Lưới Danh mục -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmitCreate"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryLabel" />

    <!-- Nút Submit: Dùng MaterialButton để bo góc -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitCreate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:backgroundTint="#FF9800"
        android:text="NHẬP KHOẢN CHI"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>